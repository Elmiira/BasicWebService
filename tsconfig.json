{
  "compilerOptions": {
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node", "mongodb"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.gql"
  ],
  "exclude": [
    "node_modules"
  ]
}
